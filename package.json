{
  "name": "watchapi-client",
  "publisher": "watchapi",
  "displayName": "watchapi-client",
  "description": "Rest client for api testing",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:watchapi.collections",
    "onCommand:watchapi.newRequest",
    "onCommand:watchapi.auth.login",
    "onCommand:watchapi.collections.create",
    "onCommand:watchapi.collections.addEndpoint",
    "onCommand:watchapi.collections.openEndpoint",
    "onCommand:watchapi.collections.deleteCollection",
    "onCommand:watchapi.collections.deleteEndpoint",
    "onCommand:watchapi.collections.deleteSelected",
    "onCommand:watchapi.collections.renameCollection",
    "onCommand:watchapi.collections.refresh"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "WatchAPI Client",
      "properties": {
        "watchapi.apiUrl": {
          "type": "string",
          "default": "http://localhost:3000",
          "description": "Base URL for the WatchAPI server (tRPC endpoint is /api/trpc)."
        },
        "watchapi.apiToken": {
          "type": "string",
          "default": "",
          "description": "Bearer token used for authenticated WatchAPI requests."
        },
        "watchapi.organizationId": {
          "type": "string",
          "default": "",
          "description": "Optional organization ID to send as x-organization-id."
        }
      }
    },
    "commands": [
      {
        "command": "watchapi-client.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "watchapi.auth.login",
        "title": "WatchAPI: Login"
      },
      {
        "command": "watchapi.collections.create",
        "title": "WatchAPI: New Collection",
        "icon": "$(add)"
      },
      {
        "command": "watchapi.collections.refresh",
        "title": "WatchAPI: Refresh Collections",
        "icon": "$(refresh)"
      },
      {
        "command": "watchapi.collections.addEndpoint",
        "title": "WatchAPI: New Endpoint",
        "icon": "$(add)"
      },
      {
        "command": "watchapi.collections.openEndpoint",
        "title": "WatchAPI: Open Endpoint"
      },
      {
        "command": "watchapi.collections.renameCollection",
        "title": "WatchAPI: Rename Collection",
        "icon": "$(edit)"
      },
      {
        "command": "watchapi.collections.deleteCollection",
        "title": "WatchAPI: Delete Collection"
      },
      {
        "command": "watchapi.collections.deleteEndpoint",
        "title": "WatchAPI: Delete Endpoint"
      },
      {
        "command": "watchapi.collections.deleteSelected",
        "title": "WatchAPI: Delete Selected"
      },
      {
        "command": "watchapi.openSettings",
        "title": "WatchAPI: Open Settings"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "watchapi",
          "title": "WatchAPI Client",
          "icon": "assets/watchapi-icon.png"
        }
      ]
    },
    "views": {
      "watchapi": [
        {
          "id": "watchapi.collections",
          "name": ""
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "watchapi.collections.create",
          "when": "view == watchapi.collections",
          "group": "navigation"
        },
        {
          "command": "watchapi.collections.refresh",
          "when": "view == watchapi.collections",
          "group": "navigation"
        },
        {
          "command": "watchapi.newRequest",
          "when": "view == watchapi.collections",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "watchapi.collections.addEndpoint",
          "when": "view == watchapi.collections && viewItem == collectionItem",
          "group": "inline"
        },
        {
          "command": "watchapi.collections.renameCollection",
          "when": "view == watchapi.collections && viewItem == collectionItem",
          "group": "inline"
        },
        {
          "command": "watchapi.collections.deleteCollection",
          "when": "view == watchapi.collections && viewItem == collectionItem",
          "group": "3_delete"
        },
        {
          "command": "watchapi.collections.deleteEndpoint",
          "when": "view == watchapi.collections && viewItem == endpointItem",
          "group": "3_delete"
        }
      ]
    },
    "keybindings": [
      {
        "command": "watchapi.collections.deleteSelected",
        "key": "delete",
        "when": "focusedView == watchapi.collections && listFocus"
      },
      {
        "command": "watchapi.collections.deleteSelected",
        "key": "backspace",
        "when": "focusedView == watchapi.collections && listFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "@trpc/client": "11.6.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.107.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "esbuild": "^0.27.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}